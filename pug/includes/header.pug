mixin header(active)
    header 
        #navBar 

            a(href="./index.html#indexContents", data-active=`${active === "home" ? "true" : "false"}`) Home 
            a(href="./index.html#skillsContents", data-active=`${active === "skills" ? "true" : "false"}`) Skills and Education 
            a(href="./index.html#galleryContents", data-active=`${active === "gallery" ? "true" : "false"}`) My Gallery   
            a(href="./index.html#highlightsContents", data-active=`${active === "highlights" ? "true" : "false"}`) Highlights
            a(href="./blog.html#blogContents", data-active=`${active === "blog" ? "true" : "false"}`) Blog 